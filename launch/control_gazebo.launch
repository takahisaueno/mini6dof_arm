<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find mini6dof_arm)/urdf/robot_body.urdf"/>
  
  <arg name="mode" default="0" type="int"/>
  <arg name="moveit" default="true"/>
  <arg name="yolo" default="false"/>
  <arg name="pid" default="false"/>

  <param name="robot_description" textfile="$(arg model)"/>
  <group if="$(eval (mode==0 or mode==2))">
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model arm_robot" />
  </group>

  <include file="$(find mini6dof_arm)/launch/sim_control.launch" pass_all_args="true"/>
  <group if="$(eval moveit==true)" ns="arm_robot">
    <include file="$(find mini6dof_arm_config)/launch/arm_robot_planning_execution.launch"/>
  </group>
  
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"> 
    <param name="/use_gui" value="false"/> 
    <rosparam param="/source_list">[/arm_robot/joint_states]</rosparam>
  </node>

  <group if="$(eval yolo==true)">
    <include file="$(find mini6dof_arm)/launch/yolo_arm.launch"/>
  </group>
</launch>